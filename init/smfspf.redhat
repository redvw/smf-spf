#!/bin/sh
# Startup script for smf-spf milter
#
# chkconfig: - 75 25
# description: Run smf-spf milter that realizes the SPF technology

# Source function library.
. /etc/rc.d/init.d/functions

[ -f /usr/sbin/smf-spf ] || exit 0

prog="smf-spf"
LOCKFILE=/var/lock/subsys/$prog

start() {
    echo -n $"Starting $prog: " 
    daemon /usr/sbin/smf-spf
    RETVAL=$?
    touch $LOCKFILE
    echo
    return $RETVAL
}

stop() {
    if test "x`pidof smf-spf`" != x; then
	echo -n $"Stopping $prog: "
	killproc smf-spf
	echo
    fi
    RETVAL=$?
    rm -f $LOCKFILE
    return $RETVAL
}

case "$1" in
	start)
	    start
	    ;;
	
	stop)
	    stop
	    ;;
	
	status)
	    status smf-spf
	    ;;
	restart)
	    stop
	    start
	    ;;
	condrestart)
	    if [ -f $LOCKFILE ]; then
		stop
		start
	    fi
	    ;;
	
	*)
	    echo $"Usage: $0 {start|stop|restart|condrestart|status}"
	    exit 1

esac

exit $RETVAL
